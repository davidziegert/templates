<%- include("./partials/head.ejs"); %> <%- include("./partials/header.ejs"); %> <%- include("./partials/nav.ejs"); %>

<main>
  <section>
    <h1><%= txt_title %></h1>

    <form action="/mysql" method="POST">
      <fieldset>
        <label>Year</label>
        <input type="number" id="year" name="year" min="1900" max="2050" value="" />

        <label>Title</label>
        <input type="text" id="title" name="title" value="" />

        <label>Description</label>
        <textarea id="description" name="description" rows="5" cols="33"></textarea>

        <button type="submit"><i class="fa fa-plus" aria-hidden="true"></i></button>
      </fieldset>
    </form>
  </section>
</main>

