<%- include("./partials/head.ejs"); %> <%- include("./partials/header.ejs"); %> <%- include("./partials/nav.ejs"); %>

<main>
  <section>
    <h1><%= txt_title %></h1>

    <form action="/mysql/update" method="POST">
      <fieldset>
        <label>ID</label>
        <input type="text" id="id" name="id" value="<%= data.id %>" readonly />

        <label>Year</label>
        <input type="number" id="year" name="year" min="1900" max="2050" value="<%= data.year %>" />

        <label>Title</label>
        <input type="text" id="title" name="title" value="<%= data.title %>" />

        <label>Description</label>
        <textarea id="description" name="description" rows="5" cols="33"><%= data.description %></textarea>
      </fieldset>
      <fieldset>
        <button type="submit" formaction="/mysql/update"><i class="fa fa-pencil" aria-hidden="true"></i></button>
        <button type="submit" formaction="/mysql/delete"><i class="fa fa-trash" aria-hidden="true"></i></button>
      </fieldset>
    </form>
  </section>
</main>

