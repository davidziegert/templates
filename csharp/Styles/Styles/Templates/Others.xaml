<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Border_Window" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"></Setter>
        <Setter Property="Background" Value="#303030"></Setter>
    </Style>

    <Style x:Key="Border_Info" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="Background" Value="#1DE9B6"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
    </Style>

    <Style x:Key="Border_Box" TargetType="Border">
        <Setter Property="CornerRadius" Value="5"></Setter>
        <Setter Property="Background" Value="#424242"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
    </Style>
</ResourceDictionary>