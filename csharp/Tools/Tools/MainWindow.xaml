<Window x:Class="Tools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tools"
        xmlns:vw="clr-namespace:Tools.View"
        xmlns:vm="clr-namespace:Tools.ViewModel"
        xmlns:helper="clr-namespace:Tools.Helper"
        mc:Ignorable="d"
        Height="800" Width="1200"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <!--Import DataTemplate for switching the ViewModels/Views-->
    <Window.DataContext>
        <helper:NavigationViewModel></helper:NavigationViewModel>
    </Window.DataContext>

    <Border Style="{StaticResource Border_Window}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="730"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Margin="10">
                <DockPanel LastChildFill="False" VerticalAlignment="Center">
                    <TextBlock DockPanel.Dock="Left" Text="Tools 1.0" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TextBlock_Title}"></TextBlock>
                    <Button x:Name="btn_Close" DockPanel.Dock="Right" Width="50" Height="50" Click="btn_Close_Click" Style="{StaticResource Button_Window}">
                        <Image Source="/Images/close.png"></Image>
                    </Button>
                    <Separator DockPanel.Dock="Right" Width="10" Opacity="0"></Separator>
                    <Button x:Name="btn_Minimize" DockPanel.Dock="Right" Width="50" Height="50" Click="btn_Minimize_Click" Style="{StaticResource Button_Window}">
                        <Image Source="/Images/minimize.png"></Image>
                    </Button>
                </DockPanel>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="710"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"></ColumnDefinition>
                    <ColumnDefinition Width="1000"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <StackPanel>
                        <Button Height="50" Content="Home" Command="{Binding HomeCommand}" Style="{StaticResource Button_Regular}"></Button>
                        <Separator Width="10" Opacity="0"></Separator>
                        <Button Height="50" Content="Text Recognition" Command="{Binding TextCommand}" Style="{StaticResource Button_Regular}"></Button>
                        <Separator Width="10" Opacity="0"></Separator>
                        <Button Height="50" Content="Speech Recognition" Command="{Binding SpeechCommand}" Style="{StaticResource Button_Regular}"></Button>
                        <Separator Width="10" Opacity="0"></Separator>
                        <Button Height="50" Content="Stroop Test" Command="{Binding StroopCommand}" Style="{StaticResource Button_Regular}"></Button>
                        <Separator Width="10" Opacity="0"></Separator>
                        <Button Height="50" Content="Kinect" Command="{Binding KinectCommand}" Style="{StaticResource Button_Regular}"></Button>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>